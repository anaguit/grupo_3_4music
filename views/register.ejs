<!DOCTYPE html>
<html lang="es">
<%-include("partials/head.ejs", {title: 'Registración'})%>
<link rel="stylesheet" href="/css/registro.css">

<body class="fourMusic">
    
    <%-include("partials/header.ejs")%>

    <main>
        <div class="contenedorForm registro">
            
                
                
             
                <form class="formularioRegistro" action="/users/register" method="POST" enctype="multipart/form-data">
                    <h2 class="bienvenidaRegistro">Bienvenido a 4Music!</h2> 

                    <div class="contenedorFormRegistro">
                        <p id="errorNombreP" style="text-align: center;"></p>
                        
                        <% if(locals.errors && errors.nombre) { %>
                            <p style="color: red;"><%= errors.nombre.msg %></p>
                        <% } %>
                    <div class="contenedorInput">
                        
                        <i class="fas fa-user icon"></i>
                        <input type="text" name="nombre" id="nombre"  value="<%= locals.old && old.nombre ? old.nombre : '' %>" placeholder="Ingresa tu nombre">
                        
                    </div>
                    <p id="errorApellidoP" style="text-align: center;"></p>
                        
                        <% if(locals.errors && errors.apellido) { %>
                            <p style="color: red;"><%= errors.apellido.msg %></p>
                        <% } %>
                    <div class="contenedorInput">
                        
                        <i class="fas fa-user icon"></i>
                        <input type="text" name="apellido" id="apellido"  value="<%= locals.old && old.apellido ? old.apellido : '' %>" placeholder="Ingresa tu apellido">
                    </div>

                    <p id="errorEmailP" style="text-align: center;"></p>
                        
                        <% if(locals.errors && errors.email) { %>
                            <p style="color: red;"><%= errors.email.msg %></p>
                        <% } %>
                    <div class="contenedorInput">
                        
                        <i class="fas fa-envelope icon"></i>
                        <input type="text" name="email" id="email"  value="<%= locals.old && old.email ? old.email : '' %>" placeholder="Ingresa tu email">
                    </div>

                    <p id="errorContraseñaP" style="text-align: center;"></p>
                        
                        <% if(locals.errors && errors.contraseña){ %>
                            <p style="color: red;"><%= errors.contraseña.msg %></p>
                        <% } %>
                    <div class="contenedorInput">
                        
                        <i class="fas fa-key icon"></i>
                        <input type="password" name="contraseña" id="contraseña" placeholder="Ingresa una contraseña">
                    </div>

                    <p id="errorTelefonoP" style="text-align: center;"></p>
                        
                        <% if(locals.errors && errors.telefono) { %>
                            <p style="color: red;"><%= errors.telefono.msg %></p>
                        <% } %>
                    <div class="contenedorInput">
                        
                        <i class="fas fa-phone icon"></i>
                        <input type="text" name="telefono" id="telefono"  value="<%= locals.old && old.telefono ? old.telefono : '' %>" placeholder="Ingresa un numero de telefono">
                    </div>

                    <p id="errorFotoP" style="text-align: center;"></p>
                    
                        <label for="avatar">Seleccionar Foto de Perfil:</label>
                        <% if(locals.errors && errors.avatar) { %>
                            <p style="color: red;"><%= errors.avatar.msg %></p>
                        <% } %>
                    <div class="contenedorInput">
                        <i class="fas fa-image icon"></i>
                        <input type="file" name="avatar" id="avatar">
                        
                    </div>
                    <div class="contenedorInput" style="border: none;">
                        <p id="errorTipoUsuarioP" style="text-align: center;"></p>
                        <label for="tipoUsuario">Tipo de Usuario</label>
                        <select name="tipoUsuario" id="tipoUsuario"> 
                            <option value="">Seleccionar</option>
                            <option value="1" <%= locals.old && old.tipoUsuario === "1" ? "selected" : " "; %>>Comprador</option>
                            <option value="2" <%= locals.old && old.tipoUsuario === "2" ? "selected" : " "; %>>Vendedor</option>
                        </select>
                    </div>
                    <div class="contenedorInput" style="border: none;">
                        <button type="reset" value="borrar" class="boton-registro">Borrar datos</button>
                    </div>
                    <div class="contenedorInput" style="border: none;">
                        <button type="submit" class="boton-registro">Crear cuenta</button>
                    </div>
                   
                    </div>
                </form>
            
        </div>
    </main>
    
    <%-include("partials/footer.ejs")%>


<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script src="../js/register.js"></script>
</body>
</html>