<!DOCTYPE html>
<html lang="es">
<%-include("partials/head.ejs", {title: 'Login'})%>


<body class="fourMusic">
   
    <%-include("partials/header.ejs")%>

    <main>
        <div class="contenedorMain fondoLogin">
            <div class="formulario">         
                <h2 class="bienvenida">Bienvenido a 4Music!</h2>
                <form id="login" action="/users" method="POST" >
                    <div class="lineaForm">
                        <p id="errorEmail" style="color: red"></p>
                     
                        <% if(locals.errors && errors.email) { %>
                            <p style="color: red;"> <%= errors.email.msj %></p>
                        <% } %>
                        <i class="fas fa-envelope icon"></i>
                        <input type="email" name="email" id="email" value="<%= locals.old && old.email ? old.email : '' %>" placeholder="Introduce tu email"><span id="iconoX"></span>     
                    </div>
                    <div class="lineaForm">
                        <p id="errorContraseña" style="color: red"></p>
                        <label for="contraseña">Contraseña:</label>
                        <% if(locals.errors && errors.contraseña && errors.contraseña.msj){ %>
                            <p style="color: red;"><%= errors.contraseña.msj %></p>
                        <% } %>
                        <input type="password" name="contraseña" id="contraseña">    
                    </div>
                    <div class="lineaForm"> 
                        <a href="">Olvidaste tu contaseña?</a>
                    </div>
                    <div class="lineaForm"> 
                        <button type="submit" class="boton-registro">Ingresar</button>
                    </div>
                    <div class="lineaForm"> 
                        <input type="checkbox" class="check" name="recordarUsuario">Permanecer conectado
                    </div>
                    <div class="lineaForm"> 
                        <a href="/users/register">No tenés cuenta?</a>
                    </div>
                    <div class="lineaForm"> 
                        <a href="/users/register"><button type="button" class="boton-registro">Crea tu cuenta</button></a>
                    </div>
                </form>
            </div>
        </div>
    </main>
    

    <%-include("partials/footer")%>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="../js/loginUsuario.js"></script>
</body>
</html>